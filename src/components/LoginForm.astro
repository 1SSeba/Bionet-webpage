---
const { action = "#" } = Astro.props;
import Button from '../components/Button.astro';
---

<form action={action} method="post" class="login-form">
  <div class="form-group">
    <label for="username">Username</label>
    <input type="text" id="username" name="username" required />
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" id="password" name="password" required />
  </div>
  
  <!-- Actualiza el href para llevar al dashboard -->
  <Button text="Login" href="/dashboard" />

  <!-- OpciÃ³n para registrarse -->
  <div class="register-option">
    <p>Don't have an account? <a href="/register">Register here</a></p>
  </div>
</form>

<style>
  .login-form {
    max-width: 400px;
    margin: 2em auto;
    padding: 1em;
    border-radius: 0.5em;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    background: #fff;
  }

  .form-group {
    margin-bottom: 1em;
  }

  label {
    display: block;
    margin-bottom: 0.5em;
    font-weight: bold;
  }

  input {
    width: 100%;
    padding: 0.75em;
    border: 1px solid #ccc;
    border-radius: 0.375em;
  }

  button {
    margin-top: 1em;
  }

  .register-option {
    margin-top: 1em;
    text-align: center;
  }

  .register-option p {
    margin: 0;
    font-size: 0.9em;
  }

  .register-option a {
    color: #007bff;
    text-decoration: none;
  }

  .register-option a:hover {
    text-decoration: underline;
  }
</style>
